{
  /* ====== Configuration ====== */

  // Editor
  "editor.formatOnSave": false,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "editor.snippetSuggestions": "top",
  "editor.detectIndentation": true,
  "editor.tabSize": 2,
  "editor.folding": false,
  "emmet.triggerExpansionOnTab": true,

  // Workbench
  "files.exclude": {
    "USE_GITIGNORE": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/coverage": true,
    "**/dist": true,
    "**/build": true
  },
  "explorer.confirmDragAndDrop": false,
  "workbench.settings.editor": "json",

  // Terminal
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.lineHeight": 1.2,

  /* ====== Linters ====== */

  // Javascript
  "javascript.format.enable": false,
  "javascript.validate.enable": false,
  "eslint.autoFixOnSave": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    {
      "language": "vue",
      "autoFix": true
    }
  ],
  "eslint.options": {
    "env": {
      "browser": true,
      "jest/globals": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "no-debugger": "off"
    }
  },

  /* ====== Editor Styling ====== */

  // Editor
  "editor.fontFamily": "'Fira Code', Monaco,  monospace, 'Apple Color Emoji'",
  "editor.fontSize": 16,
  "editor.lineHeight": 25,
  "editor.fontLigatures": true,
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [
    80
  ],
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 3,
  "editor.minimap.enabled": false,
  "editor.lineNumbers": "relative",
  "amVim.smartRelativeLineNumbers": true,

  // Workbench
  "explorer.openEditors.visible": 0,
  "workbench.colorTheme": "Night Owl",
  "workbench.iconTheme": "vscode-great-icons",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.activityBar.visible": false,
  "window.zoomLevel": 0,

  // Statusbar
  "liveshare.showInStatusBar": "whileCollaborating",
  "workbench.statusBar.feedback.visible": false,
  "spellright.statusBarIndicator": false,

  // JSON5 theme support isn't great for now
  "files.associations": {
    "*.json5": "jsonc"
  },

  /* ====== Code Spell Checker ====== */

  "spellright.language": ["en"],
  "spellright.documentTypes": ["markdown", "plaintext"],

  /* ====== Miscellaneous ====== */

  "telemetry.enableTelemetry": false,
  "telemetry.enableCrashReporter": false,

  /* ====== Display Modes ====== */
  // screenshare
  /*
  "window.zoomLevel": 0,
  "editor.fontSize": 22,
  "terminal.integrated.fontSize": 16,
  "scm.diffDecorations": "none",
  "editor.lineNumbers": "off",
  "workbench.statusBar.visible": false,
  "editor.cursorBlinking": "solid"
  /**/
}
