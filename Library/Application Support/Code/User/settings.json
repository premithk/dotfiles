{
    /* ====== Configuration ====== */

    // Editor
    "editor.formatOnSave": true,
    "files.insertFinalNewline": true,
    "editor.snippetSuggestions": "top",
    "editor.detectIndentation": true,
    "editor.tabSize": 2,
    "emmet.triggerExpansionOnTab": true,

    // Workbench
    "files.exclude": {
        "USE_GITIGNORE": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/coverage": true
    },
    "explorer.confirmDragAndDrop": false,
    "workbench.settings.editor": "json",

    // Terminal
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.lineHeight": 1,

    /* ====== Linters ====== */

    // Javascript
    "javascript.format.enable": false,
    "javascript.validate.enable": false,
    "eslint.autoFixOnSave": true,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        {
            "language": "vue",
            "autoFix": true
        }
    ],
    "eslint.options": {
        "rules": {
          "no-debugger": "off"
        }
    },

    /* ====== Editor Styling ====== */

    // Editor
    "editor.fontFamily": "'Fira Code', Monaco, 'Courier New', monospace, 'Apple Color Emoji'",
    "editor.fontSize": 15,
    "editor.lineHeight": 25,
    "editor.fontLigatures": true,
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [ 80 ],
    "editor.cursorStyle": "line",
    "editor.cursorWidth": 3,
    "editor.minimap.enabled": false,
    "editor.lineNumbers": "relative",
    "amVim.smartRelativeLineNumbers": true,
    "bracketPairColorizer.timeOut": 200,
    
    // Workbench
    "explorer.openEditors.visible": 0,
    "workbench.colorTheme": "Night Owl",
    "workbench.iconTheme": "vscode-great-icons",
    "workbench.statusBar.feedback.visible": false,
    "workbench.startupEditor": "newUntitledFile",
    "window.zoomLevel": -1,

    /* ====== Language Specific ====== */

    "[json]": {
        "editor.quickSuggestions": {
            "strings": true
        },
        "editor.formatOnSave": false
    },

    // Don't reformat the vscode settings file
    "[jsonc]": {
        "editor.formatOnSave": false
    },

    "[fish]": {
        "editor.formatOnSave": false
    },

    // JSON5 theme support isn't great for now
    "files.associations": {
        "*.json5": "jsonc"
    },

    /* ====== Code Spell Checker ====== */

    "cSpell.enabledLanguageIds": [
        "markdown",
        "text"
    ],

    /* ====== Miscellaneous ====== */

    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
}
